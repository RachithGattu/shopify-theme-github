{% assign product_handle = section.settings.product_handle | default: 'electric-nail-cutter' %}
{% assign product_url = routes.root_url | append: '/products/' | append: product_handle %}

<div class="top-bar">
  <span>{{ section.settings.top_bar_text }}</span>
  {% if section.settings.top_bar_link_text != blank %}
    <a href="{{ section.settings.top_bar_link_url }}">{{ section.settings.top_bar_link_text }}</a>
  {% endif %}
</div>

<nav class="nav" aria-label="Primary">
  <div class="nav__logo">
    {% if section.settings.logo_badge != blank %}
      <span class="nav__logo-bubble">{{ section.settings.logo_badge }}</span>
    {% endif %}
    {{ section.settings.brand_name }}
  </div>

  <ul class="nav__links" role="list">
    <li><a href="#services">Features</a></li>
    <li><a href="#results">Specs</a></li>
    <li><a href="#testimonials">Reviews</a></li>
    <li><a href="#faq">FAQ</a></li>
  </ul>

  <div class="nav__icons">
    {% if section.settings.nav_pill_text != blank %}
      <span class="nav__pill">{{ section.settings.nav_pill_text }}</span>
    {% endif %}
    {% if section.settings.nav_cta_text != blank %}
      <a class="nav__cta" href="{% if section.settings.nav_cta_url != blank %}{{ section.settings.nav_cta_url }}{% else %}{{ product_url }}{% endif %}">{{ section.settings.nav_cta_text }} &rarr;</a>
    {% endif %}
  </div>
</nav>

<section class="hero" id="top">
  <div class="container hero__container">
    <div class="hero__content" data-animate="fade-up">
      {% if section.settings.hero_eyebrow != blank %}
        <span class="hero__eyebrow">{{ section.settings.hero_eyebrow }}</span>
      {% endif %}

      <h1 class="hero__headline">{{ section.settings.hero_headline }}</h1>

      {% if section.settings.hero_subheading != blank %}
        <p class="hero__subheading">{{ section.settings.hero_subheading }}</p>
      {% endif %}

      {% if section.settings.hero_chip_text != blank %}
        <div class="hero__chip">{{ section.settings.hero_chip_text }}</div>
      {% endif %}

      <ul class="hero__benefits" role="list">
        {% for block in section.blocks %}
          {% if block.type == 'hero_benefit' %}
            <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
          {% endif %}
        {% endfor %}
      </ul>

      <div class="hero__cta">
        {% if section.settings.hero_primary_cta_text != blank %}
          <a class="button button--primary" href="{% if section.settings.hero_primary_cta_url != blank %}{{ section.settings.hero_primary_cta_url }}{% else %}{{ product_url }}{% endif %}">{{ section.settings.hero_primary_cta_text }}</a>
        {% endif %}
        {% if section.settings.hero_secondary_cta_text != blank %}
          <a class="button button--ghost" href="{{ section.settings.hero_secondary_cta_url }}">{{ section.settings.hero_secondary_cta_text }}</a>
        {% endif %}
      </div>

      <div class="hero__trust">
        {% for block in section.blocks %}
          {% if block.type == 'trust_item' %}
            <div {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="hero__visual" aria-hidden="true">
      {% if section.settings.hero_badge_text != blank %}
        <div class="hero__badge">{{ section.settings.hero_badge_text }}</div>
      {% endif %}
      <div class="hero__device"></div>

      {% assign hero_cards = section.blocks | where: 'type', 'hero_card' %}
      {% if hero_cards.size > 0 %}
        {% for block in hero_cards limit: 2 %}
          <div class="hero__card {% if forloop.index == 1 %}hero__card--one{% else %}hero__card--two{% endif %}" {{ block.shopify_attributes }}>
            <strong>{{ block.settings.title }}</strong>
            <span>{{ block.settings.subtitle }}</span>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<section class="brand-strip" aria-label="Trusted by">
  <div class="container brand-strip__container">
    <span>{{ section.settings.trusted_by_label }}</span>
    <ul role="list">
      {% for block in section.blocks %}
        {% if block.type == 'logo' %}
          <li {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 240 | image_tag: loading: 'lazy', alt: block.settings.alt | escape }}
            {% else %}
              {{ block.settings.text }}
            {% endif %}
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</section>

<section class="category-cards" id="services" aria-label="Services">
  <div class="container">
    <header class="section-header">
      <span class="eyebrow">{{ section.settings.services_eyebrow }}</span>
      <h2>{{ section.settings.services_heading }}</h2>
      {% if section.settings.services_subheading != blank %}
        <p>{{ section.settings.services_subheading }}</p>
      {% endif %}
    </header>

    <div class="category-cards__grid">
      {% for block in section.blocks %}
        {% if block.type == 'service' %}
          <article class="category-card" data-animate="fade-up" {{ block.shopify_attributes }}>
            {% if block.settings.tag != blank %}
              <span class="category-card__tag">{{ block.settings.tag }}</span>
            {% endif %}
            <h3 class="category-card__title">{{ block.settings.title }}</h3>
            {% if block.settings.body != blank %}
              <p>{{ block.settings.body }}</p>
            {% endif %}
            <div class="category-card__placeholder" aria-hidden="true"></div>
            {% if block.settings.link_text != blank %}
              <a class="button button--ghost" href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
            {% endif %}
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="metrics" id="results" aria-label="Results">
  <div class="container">
    <div class="metrics__strip">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div class="metrics__item" {{ block.shopify_attributes }}>
            <strong>{{ block.settings.value }}</strong>
            <span>{{ block.settings.label }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="features" aria-label="How we work">
  <div class="container">
    <header class="section-header">
      <span class="eyebrow">{{ section.settings.process_eyebrow }}</span>
      <h2>{{ section.settings.process_heading }}</h2>
      {% if section.settings.process_subheading != blank %}
        <p>{{ section.settings.process_subheading }}</p>
      {% endif %}
    </header>

    <div class="features__grid">
      {% for block in section.blocks %}
        {% if block.type == 'process_step' %}
          <article class="feature-card" data-animate="fade-up" {{ block.shopify_attributes }}>
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.body }}</p>
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="social-proof" id="testimonials" aria-label="Testimonials">
  <div class="container">
    <header class="section-header">
      <span class="eyebrow">{{ section.settings.testimonials_eyebrow }}</span>
      <h2>{{ section.settings.testimonials_heading }}</h2>
    </header>

    <div class="reviews">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <article class="review" data-animate="fade-up" {{ block.shopify_attributes }}>
            {% if block.settings.rating != blank %}
              <div class="review__rating" aria-label="{{ block.settings.rating }} out of 5 stars">{{ block.settings.rating_stars }}</div>
            {% endif %}
            <p>&ldquo;{{ block.settings.quote }}&rdquo;</p>
            <span class="review__author">&mdash; {{ block.settings.author }}</span>
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="faq" id="faq">
  <div class="container">
    <header class="section-header">
      <span class="eyebrow">{{ section.settings.faq_eyebrow }}</span>
      <h2>{{ section.settings.faq_heading }}</h2>
    </header>

    <div class="faq__list" data-animate="fade-up">
      {% for block in section.blocks %}
        {% if block.type == 'faq' %}
          <details {% if forloop.first %}open{% endif %} {{ block.shopify_attributes }}>
            <summary>{{ block.settings.question }}</summary>
            <p>{{ block.settings.answer }}</p>
          </details>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<section class="final-cta" id="contact">
  <div class="container final-cta__container" data-animate="fade-up">
    <div>
      <h2>{{ section.settings.cta_heading }}</h2>
      <p>{{ section.settings.cta_subheading }}</p>
    </div>
    <a class="button button--primary" href="{% if section.settings.cta_button_url != blank %}{{ section.settings.cta_button_url }}{% else %}{{ product_url }}{% endif %}">{{ section.settings.cta_button_text }}</a>
  </div>
</section>

