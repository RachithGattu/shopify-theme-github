{{ 'portfolio.css' | asset_url | stylesheet_tag }}

<div class="portfolio-page">
  <div class="cursor"></div>
  <div class="cursor-follower"></div>
  <div class="portfolio-bg-animation"></div>

  <!-- Header -->
  <header class="portfolio-header">
    <a href="#home" class="portfolio-logo">&lt;/{{ section.settings.name }}&gt;</a>
    <nav class="portfolio-nav">
      <a href="#home">Home</a>
      <a href="#skills">Skills</a>
      <a href="#projects">Projects</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <!-- Hero Section -->
  <section id="home" class="portfolio-hero">
    <h1 class="animated-title">Hey, I'm <a href="{{ section.settings.linkedin_url }}" target="_blank" class="highlight-word">{{ section.settings.first_name }}</a>.</h1>
    <h2>{{ section.settings.tagline }}</h2>
    <p>{{ section.settings.subtitle }}</p>
    <div class="cta-buttons">
      <a href="#projects" class="portfolio-btn portfolio-btn-primary">View My Work</a>
      <a href="#contact" class="portfolio-btn portfolio-btn-secondary">Get In Touch</a>
    </div>
    <div class="scroll-indicator"></div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="portfolio-section">
    <h2 class="portfolio-section-title">Technical Skills</h2>
    <div class="skills-grid">
      {% for block in section.blocks %}
        {% if block.type == 'skill' %}
          <div class="skill-card" {{ block.shopify_attributes }}>
            <div class="skill-icon">{{ block.settings.icon }}</div>
            <h3>{{ block.settings.name }}</h3>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="portfolio-section">
    <h2 class="portfolio-section-title">Featured Projects</h2>
    <div class="projects-grid">
      {% for block in section.blocks %}
        {% if block.type == 'project' %}
          <div class="project-card" {{ block.shopify_attributes }}>
            <div class="project-img">{{ block.settings.icon }}</div>
            <div class="project-content">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
              <div class="project-tags">
                {% assign tags = block.settings.tags | split: ',' %}
                {% for tag in tags %}
                  <span class="tag">{{ tag | strip }}</span>
                {% endfor %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="portfolio-section">
    <h2 class="portfolio-section-title">Get In Touch</h2>
    <div class="contact-container">
      <form class="contact-form" onsubmit="handlePortfolioSubmit(event)">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" required></textarea>
        </div>
        <button type="submit" class="portfolio-btn portfolio-btn-primary">Send Message</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer class="portfolio-footer">
    <div class="social-links">
      {% if section.settings.linkedin_url != blank %}
