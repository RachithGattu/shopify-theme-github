<style>
  .product-features-section {
    padding: 40px 20px;
    background: {{ section.settings.background_color }};
  }
  
  .features-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .features-title {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 30px;
    color: {{ section.settings.title_color }};
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
  }
  
  .feature-card {
    background: white;
    padding: 30px 25px;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: all 0.4s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-10px) scale(1.03);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }
  
  .feature-icon {
    font-size: 56px;
    margin-bottom: 20px;
    display: block;
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
  }
  
  .feature-card:nth-child(1) .feature-icon { animation-delay: 0s; }
  .feature-card:nth-child(2) .feature-icon { animation-delay: 0.5s; }
  .feature-card:nth-child(3) .feature-icon { animation-delay: 1s; }
  .feature-card:nth-child(4) .feature-icon { animation-delay: 1.5s; }
  
  .feature-title {
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 12px;
    font-size: 18px;
  }
  
  .feature-description {
    color: #6b7280;
    font-size: 14px;
    line-height: 1.6;
  }
  
  .guarantee-section {
    max-width: 700px;
    margin: 50px auto 0;
    padding: 35px;
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 10px 35px rgba(0, 0, 0, 0.15);
  }
  
  .guarantee-icon {
    font-size: 64px;
    margin-bottom: 20px;
    animation: rotate 4s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .guarantee-title {
    color: white;
    font-size: 26px;
    font-weight: 800;
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .guarantee-text {
    color: rgba(255, 255, 255, 0.95);
    font-size: 16px;
    line-height: 1.7;
  }
</style>

<div class="product-features-section">
  <div class="features-container">
    {%- if section.settings.show_title -%}
      <h2 class="features-title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    <div class="features-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature' -%}
            <div class="feature-card" {{ block.shopify_attributes }}>
              <span class="feature-icon">{{ block.settings.icon }}</span>
              <h3 class="feature-title">{{ block.settings.title }}</h3>
              <p class="feature-description">{{ block.settings.description }}</p>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_guarantee -%}
      <div class="guarantee-section">
        <div class="guarantee-icon">üõ°Ô∏è</div>
        <h3 class="guarantee-title">{{ section.settings.guarantee_title }}</h3>
        <p class="guarantee-text">{{ section.settings.guarantee_text }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

